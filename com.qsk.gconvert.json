{
    "app-id": "com.qsk.gconvert",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "gconvert",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
	"--filesystem=host",
	"--filesystem=xdg-run/gvfsd",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
	{
	    "name": "pillow",
	    "buildsystem": "simple",
	    "config-opts": [
		"--prefix=/app"
	    ],
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://files.pythonhosted.org/packages/94/59/6638090c25e9bc4ce0c42817b5a234e183872a1129735a9330c472cc2056/pip-24.0.tar.gz",
		    "sha256": "ea9bd1a847e8c5774a5777bb398c19e80bcd4e2aa16a4b301b718fe6f593aba2"
		}
	    ],
	    "build-commands": [
		"python3 setup.py install --prefix=/app"
	    ]
	},
        {
            "name": "gconvert",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/quentinSoranzoKrebs/gnome-convert.git"
                }
            ],
            "build-options": {
                "python": {
                    "packages": [
                        {
                            "name": "python3",
                            "modules": ["PIL"]
                        }
                    ]
                }
            }
        }
    ]
}
