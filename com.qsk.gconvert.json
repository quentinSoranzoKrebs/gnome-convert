{
    "app-id": "com.qsk.gconvert",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "gconvert",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
	"--filesystem=host",
	"--filesystem=xdg-run/gvfsd",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
	{
	    "name": "pillow",
	    "buildsystem": "simple",
	    "config-opts": [
		"--prefix=/app"
	    ],
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://files.pythonhosted.org/packages/f8/3e/32cbd0129a28686621434cbf17bb64bf1458bfb838f1f668262fefce145c/pillow-10.2.0.tar.gz",
		    "sha256": "e87f0b2c78157e12d7686b27d63c070fd65d994e8ddae6f328e0dcf4a0cd007e"
		}
	    ],
	    "build-commands": [
	    	"ls",
		"python3 setup.py install --user"
	    ]
	},
        {
            "name": "gconvert",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/quentinSoranzoKrebs/gnome-convert.git"
                }
            ]
        }
    ]
}
